generator client {
  provider = "prisma-client-js"
  moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}


//// ENUMS — contrôle des données (OBLIGATOIRE)

enum WatchStatus {
  PLANNING
  WATCHING
  COMPLETED
  DROPPED
}

enum Genre {
  ACTION
  ADVENTURE
  COMEDY
  DRAMA
  FANTASY
  HORROR
  MYSTERY
  ROMANCE
  SCI_FI
  SLICE_OF_LIFE
}

enum Mood {
  CHILL
  DARK
  HYPE
  EMOTIONAL
}

// USER

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  googleId  String?  @unique

  // Auth locale (optionnel car Google n'a pas de password)
  passwordHash String?
  // Cas A: un seul refresh token "actif" par user (rotation)
  refreshTokenHash String?

  // Reset mot de passe (token à usage unique)
  passwordResetTokenHash      String?
  passwordResetTokenExpiresAt DateTime?

  // Profil
  username  String?  @unique
  firstName String?
  lastName  String?
  phone     String?
  avatarUrl String?
  bio       String?  @db.Text

  // Préférences (contrôlées)
  favoriteGenres Genre[]
  preferredMood  Mood?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  favorites  Favorite[]
  watchlist  WatchlistItem[]
  history    HistoryItem[]
}

//FAVORIS

model Favorite {
  id        String   @id @default(cuid())
  animeId   Int
  createdAt DateTime @default(now())

  userId    String
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, animeId])
  @@index([userId])
  @@index([animeId])
}

// WATCHLIST

model WatchlistItem {
  id        String      @id @default(cuid())
  animeId   Int
  status    WatchStatus @default(PLANNING)
  progress  Int         @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId    String
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, animeId])
  @@index([userId])
  @@index([animeId])
}

// HISTORIQUE (1 ligne par anime)

model HistoryItem {
  id        String   @id @default(cuid())
  animeId   Int
  episode   Int
  updatedAt DateTime @updatedAt

  userId    String
  user      User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, animeId])
  @@index([userId])
  @@index([animeId])
}